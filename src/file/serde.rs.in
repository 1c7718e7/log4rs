#[derive(Deserialize)]
#[serde(deny_unknown_fields)]
struct PrivConfig {
    refresh_rate: Option<DeDuration>,
    root: Option<Root>,
    #[serde(default)]
    appenders: HashMap<String, Appender>,
    #[serde(default)]
    loggers: HashMap<String, Logger>,
}

#[derive(Deserialize)]
#[serde(deny_unknown_fields)]
struct PrivRoot {
    #[serde(deserialize_with = "::priv_serde::de_filter")]
    level: LogLevelFilter,
    #[serde(default)]
    appenders: Vec<String>,
}

#[derive(Deserialize)]
#[serde(deny_unknown_fields)]
struct PrivLogger {
    #[serde(deserialize_with = "::priv_serde::de_filter")]
    level: LogLevelFilter,
    #[serde(default)]
    appenders: Vec<String>,
    additive: Option<bool>,
}
